{
  "name": "what-is-blockchain",
  "version": "0.1.0",
  "private": true,
  "description": "Simple site explaining Blockchain using Ethereum",
  "repository": "chadoh/what-is-blockchain",
  "author": "Chad Ostrowski",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "html-inline": "^1.2.0",
    "jest": "^24.1.0",
    "parcel-bundler": "^1.11.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4"
  },
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "parcel build src/index.html",
